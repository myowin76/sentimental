<header>
  <h1>Sentiment Pulse Login</h1>
  <p><strong>Current Users:</strong>Enter your username and password in the field below</p>
  <p><strong>New User:</strong>Enter your email address and choose a password and click on "Register"</p>
</header>


<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="form-signin-heading">LOGIN</h2>
      <div class="form-group">
        <%= f.input :email, placeholder: 'E-mail address', required: false, autofocus: true, input_html: { class: 'form-control input-lg' }, label: false %>
      </div>
      <div class="form-group">
        <%= f.input :password, placeholder: 'Password', required: false, input_html: { class: 'form-control input-lg' }, label: false %>
      </div>
      <!-- <div class="form-group">
		    <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div> -->
		  <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
      or
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block" %><br />
      <% end -%>
      
      <%#= render "devise/shared/links" %>

      <%= render 'partials/socials' %>
    <% end %>
  </div>
</div>