<div class="row">
  <div class="col-sm-8">
      <h2 class="form-signin-heading">Sentiment Pulse Login</h2>
      <section class="col-sm-offset-2">
        <br>
        <h5><strong>Current Users: </strong>Enter your username and password in the field below</h5>
        <h5><strong>New User: </strong>Enter your email address and choose a password and click on "Register"</h5>
      </section>
  </div>

  <div class="col-sm-6 col-sm-offset-3">
    <br><br>
    	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>

      <div class="form-group">
        <label class="col-sm-3 control-label">Username</label>
        <div class="col-sm-9">
          <%= f.input :email, placeholder: 'E-mail address', required: false, autofocus: true, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Password</label>
        <div class="col-sm-9">
          <%= f.input :password, placeholder: 'Password', required: false, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label">&nbsp;</label>
        <div class="col-sm-9 login-submit">
          <%= f.button :submit, "Log in", class: "btn btn-primary login" %>
          <span style="margin: 0 1em;">Or</span>
          <span>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Register", new_registration_path(resource_name), class: "" %><br />
            <% end -%>
          </span>
        </div>
      </div>
      
      <%= render 'partials/socials' %>
    <% end %>
  </div>
</div>