<div class="row">
  <div class="col-sm-8">
      <h2 class="form-signin-heading">Sentiment Pulse Registration</h2>
      <br>
      <section class="col-sm-offset-2">
        <h5><strong>New User: </strong> enter your email address and choose a password to register for the Sentiment Pulse service</h5>
      </section>
  </div>

  
  <div class="col-sm-6 col-sm-offset-3">
    <br><br>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <%#= f.error_notification %>
  
      <div class="form-group">
        <label class="col-sm-3 control-label">Name:</label>
        <div class="col-sm-9">
          <%= f.input :name, placeholder: 'Name', required: false, autofocus: true, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Email:</label>
        <div class="col-sm-9">
          <%= f.input :email, placeholder: 'E-mail address', required: false, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label">Password:</label>
        <div class="col-sm-9">
          <%= f.input :password, placeholder: 'Password', required: false, input_html: { class: 'form-control input-lg' }, label: false, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label">Confirm Password:</label>
        <div class="col-sm-9">
          <%= f.input :password_confirmation, placeholder: 'Password confirmation', required: false, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label">Company:</label>
        <div class="col-sm-9">
          <%= f.input :company, placeholder: 'Company', required: false, autofocus: true, input_html: { class: 'form-control input-lg' }, label: false %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Licence:</label>
        <div class="col-sm-9">
          <%= f.select :licence_id, options_from_collection_for_select(Admin::Licence.all, 'id', 'name'), {}, {class: 'form-control input-lg'}  %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">&nbsp;</label>
        <div class="col-sm-9">
          <%= f.button :submit, "Register", class: "btn btn-primary register" %>
        </div>
      </div>
      
      
      
      <%#= render "devise/shared/links" %>
    <% end %>
  </div>
</div>