<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <h2 class="form-signin-heading">REGISTER</h2>
      <div class="form-group">
        <%= f.input :email, placeholder: 'E-mail address', required: false, autofocus: true, input_html: { class: 'form-control input-lg' }, label: false %>
      </div>
      <div class="form-group">
        <%= f.input :password, placeholder: 'Password', required: false, input_html: { class: 'form-control input-lg' }, label: false, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, placeholder: 'Password confirmation', required: false, input_html: { class: 'form-control input-lg' }, label: false %>
      </div>
      <div class="form-group">
        <%= f.select :licence_id, options_from_collection_for_select(Admin::Licence.all, 'id', 'name'), {}, {class: 'form-control input-lg'}  %>
      </div>
      
      <%= f.button :submit, "Register", class: "btn btn-lg btn-primary btn-block" %>
      
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>