= simple_form_for(@admin_survey) do |f|
  = f.error_notification

  .form-group
    = f.input :name, input_html: {class: 'form-control'}, label: 'Survey Name:'
  .form-group
    = f.input :url_token, input_html: {class: 'form-control'}, label: 'Survey URL:'
  .form-group
    = link_to 'Generate', '#', class: 'btn btn-default generate'
  .form-group
    = f.input :question, input_html: {class: 'form-control'}

  .form-group
    = f.button :submit, class: 'btn btn-default'
    = render 'partials/socials'