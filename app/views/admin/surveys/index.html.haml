%h1 My Surveys

%table.table
  %thead
    %tr
      %th Name
      %th Url token
      %th Question
      %th Date
      %th
      %th
      %th
      
  %tbody
    - @admin_surveys.each do |admin_survey|
      %tr
        %td= admin_survey.name
        %td= link_to admin_survey.url_token, "/feedback/#{admin_survey.url_token}",  :target => "_blank"
        %td= admin_survey.question
        %td= admin_survey.created_at.strftime('%d %h %Y')
        %td= link_to 'Show', admin_survey
        %td= link_to 'Edit', edit_admin_survey_path(admin_survey)
        %td= link_to 'Destroy', admin_survey, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Survey', new_admin_survey_path, :class => 'btn btn-default'
